<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.eddie.citymanager.EditCityActivity">

    <TextView
        android:text="nomVille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/nomVille"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="Code postal :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/codePostalLabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/nomVille"
        android:layout_alignRight="@+id/codeINSEELabel"
        android:layout_alignEnd="@+id/codeINSEELabel" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codePostal"
        android:layout_alignBaseline="@+id/codePostalLabel"
        android:layout_alignBottom="@+id/codePostalLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/eloignementLabel"
        android:layout_toEndOf="@+id/eloignementLabel" />

    <TextView
        android:text="Code INSEE :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeINSEELabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/codePostal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="Code région :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeRegionLabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/codeINSEELabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="Latitude :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LatitudeLabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/codeRegionLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="Longitude :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitudeLabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/LatitudeLabel"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <TextView
        android:text="Éloignement :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eloignementLabel"
        android:textAlignment="textEnd"
        android:layout_below="@+id/longitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeINSEE"
        android:layout_alignBaseline="@+id/codeINSEELabel"
        android:layout_alignBottom="@+id/codeINSEELabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/codePostal"
        android:layout_alignStart="@+id/codePostal" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/codeRegion"
        android:layout_alignBaseline="@+id/codeRegionLabel"
        android:layout_alignBottom="@+id/codeRegionLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/codeINSEE"
        android:layout_alignStart="@+id/codeINSEE" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/latitude"
        android:layout_alignBaseline="@+id/LatitudeLabel"
        android:layout_alignBottom="@+id/LatitudeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/codeRegion"
        android:layout_alignStart="@+id/codeRegion" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/longitude"
        android:layout_alignBaseline="@+id/longitudeLabel"
        android:layout_alignBottom="@+id/longitudeLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/latitude"
        android:layout_alignStart="@+id/latitude" />

    <EditText
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/eloignement"
        android:layout_alignBaseline="@+id/eloignementLabel"
        android:layout_alignBottom="@+id/eloignementLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/eloignementLabel"
        android:layout_toEndOf="@+id/eloignementLabel" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:id="@+id/ActionButtonEdit"
        android:src="@drawable/ic_mode_edit_black_24dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/eloignement"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="14dp"
        android:layout_marginEnd="14dp" />
</RelativeLayout>
